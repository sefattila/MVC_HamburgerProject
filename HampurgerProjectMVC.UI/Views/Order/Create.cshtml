@using HamburgerProject.BLL.DTOs.SauceDTOs;
@using HamburgerProject.CORE.Enums;
@using HampurgerProjectMVC.UI.Models.VMs.OrderVMs;
@using HampurgerProjectMVC.UI.Models.VMs.SauceVMs;
@model OrderCreateVM

<h2 class="text-center">Sipariş</h2>

<div class="container row">
    <div class="container col-lg-3 border">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label>Size</label>
                <select class="form-control" asp-items="Html.GetEnumSelectList<Sizes>()" asp-for="Size">
                </select>
            </div>

            <div class="form-group">
                <label>Quantity</label>
                <input type="number" class="form-control" value="@Model.Quantity" asp-for="Quantity">
            </div>
            <input type="hidden" asp-for="@Model.AppUserId"/>

            <div class="form-group">
                <label>Menu</label>
                <select class="form-control" asp-items="@(new SelectList(Model.ActiveMenus, "Id", "MenuName"))" asp-for="MenuId">
                </select>
            </div>

            <div class="form-group" style="max-height: 150px; overflow-y: auto;">
                <label>Sauces</label>
                @foreach (SauceVM sauce in Model.ActiveSauces)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedSauceIds" value="@sauce.Id" />
                        <label class="form-check-label">
                            @sauce.SauceName
                        </label>
                    </div>
                }
            </div>

            <button type="submit" class="btn btn-primary">Sipariş Ver</button>
        </form>
    </div>
</div>