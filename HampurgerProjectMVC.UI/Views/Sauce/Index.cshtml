@using HampurgerProjectMVC.UI.Models.VMs.SauceVMs;
@model IEnumerable<SauceVM>

<div class="container col-lg-4">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Sos Adı</th>
                <th>Sos Fiyatı</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SauceVM item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <th>@item.SauceName</th>
                    <th>@item.SaucePrice</th>
                    <th><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a></th>
                    <th><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></th>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-outline-success">Sos Ekle</a>
</div>